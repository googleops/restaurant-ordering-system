{{page-title "MakeOrder"}}

<div class="container mx-auto">
    <h1 class="text-3xl font-semibold text-center mt-5">Order Your Favorite Dishes</h1>
    <div class="grid gap-4 mt-5">
        {{#each this.model as |item|}}
        <div class="bg-white p-5 rounded-lg shadow-md">
            <div class="grid grid-cols-2 gap-4">
                <div class="p-2 border border-gray-200 shadow-sm rounded">
                    <img src={{item.imageUrl}} alt={{item.name}} class="w-full h-64 object-cover mb-4">
                </div>
                <div class="p-2 rounded">
                    <h2 class="text-xl font-semibold">{{item.name}}</h2>
                    <p class="text-gray-500">{{item.description}}</p>
                    <p class="text-gray-500">Price: ${{item.price}}</p>
                    <div class="flex items-center">
                        Quantity :
                        <div class="mx-2 border-2 border-gray-400 rounded-lg">
                            {{input type="number" min="0" max=item.stock value=item.quantity class="border
                            rounded px-2 py-1 text-center" input=(action this.updateQuantity item)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

        {{!-- Order Summary --}}
        <div class="bg-white p-5 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold">Order Summary</h2>
            <div class="grid grid-cols-2 gap-4">
                <div class="p-2 border border-gray-200 shadow-sm rounded">
                    <p><span class="font-semibold">Total Items:</span></p>
                    <p>{{this.totalItems}}</p>
                </div>
                <div class="p-2 border border-gray-200 shadow-sm rounded">
                    <p><span class="font-semibold">Total Price:</span></p>
                    <p>${{this.totalPrice}}</p>
                </div>
            </div>
        </div>
        <button class="bg-[#1C1E24] text-white px-4 py-2 mt-2 rounded-lg" type="button">Order Now</button>
    </div>
    <br>
</div>